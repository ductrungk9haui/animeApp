<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:ctx=".DetailsActivity"
    tools:showIn="@layout/activity_details">

    <include
        android:id="@+id/shimmer_view_container"
        layout="@layout/layout_dimmer_detail"
        tools:visibility="gone" />

    <RelativeLayout
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/shimmer_view_container"
        android:background="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/radioPlayImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:background="@color/black"
            android:clickable="false"
            android:focusable="true"
            android:src="@drawable/logo"
            android:visibility="gone"
            tools:visibility="visible" />


        <FrameLayout
            android:id="@+id/player_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:controller_layout_id="@layout/custom_exo_layout" />

            <com.google.android.exoplayer2.ui.PlayerControlView
                android:id="@+id/cast_control_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="visible">

            </com.google.android.exoplayer2.ui.PlayerControlView>

            <com.google.android.exoplayer2.ui.SubtitleView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_action_back_arrow"
            tools:ignore="RtlSymmetry" />

        <androidx.mediarouter.app.MediaRouteButton
            android:id="@+id/media_route_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:mediaRouteTypes="user"
            android:padding="5dp"
            android:visibility="visible"
            app:mediaRouteButtonTint="@color/white" />

        <TextView
            android:id="@+id/chrome_cast_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Chrome Casting ..."
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold"
            android:visibility="gone" />


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_outline_play_circle_filled_24px"
            android:visibility="gone" />


    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play"
        tools:visibility="visible">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/poster_iv"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/image_16" />

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/lyt_parent"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="@drawable/gradient_white_transparent"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <!--<ImageView
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_outline_play_circle_filled_24px"
                                android:layout_width="38dp"
                                android:layout_height="38dp" />-->


                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/image_thumb"
                                android:layout_width="155dp"
                                android:layout_height="220dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="20dp"
                                android:scaleType="fitXY"
                                app:riv_corner_radius="5dip"
                                app:riv_mutate_background="true"
                                tools:src="@drawable/album_art_placeholder_large" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/image_thumb"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="25dp"
                                android:layout_toEndOf="@id/image_thumb"
                                android:gravity="bottom"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:includeFontPadding="false"
                                    android:textStyle="bold"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    tools:text="Two Lineah jkasdhjk" />

                                <View
                                    android:layout_width="@dimen/spacing_medium"
                                    android:layout_height="0dp" />


                                <TextView
                                    android:id="@+id/genre_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    tools:text="Documentary" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/star_img"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginTop="10dp"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/star_rating" />

                                    <TextView
                                        android:id="@+id/text_imdb"
                                        android:layout_width="80dp"
                                        android:includeFontPadding="false"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_toRightOf="@+id/star_img"
                                        android:maxLines="1"
                                        android:textSize="35sp"
                                        tools:text="8.9" />

                                </RelativeLayout>

                            </LinearLayout>

                            <Button
                                android:id="@+id/watch_now_bt"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:backgroundTint="@color/colorPrimary"
                                android:text="@string/watch_now"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="56dp"
                                android:layout_toEndOf="@id/image_thumb"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/download_bt"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:backgroundTint="@color/white"
                                android:text="@string/download"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="16dp"
                                android:layout_toEndOf="@id/image_thumb"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/black"
                                android:visibility="visible" />

                        </RelativeLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/series_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/seriest_title_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_alignParentLeft="true"
                        android:paddingEnd="5dp"
                        android:layout_toStartOf="@id/add_fav2"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="series title" />

                    <ImageView
                        android:id="@+id/add_fav2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_toStartOf="@id/report_iv2"
                        android:layout_marginRight="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/outline_favorite_border_24" />

                    <ImageButton
                        android:id="@+id/report_iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginRight="8dp"
                        android:layout_toStartOf="@id/share_iv3"
                        android:src="@drawable/ic_report" />
                    <ImageView
                        android:id="@+id/share_iv3"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_share_white"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/subs_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_subtitle"
                        android:layout_gravity="top"
                        app:tint="@color/green_500" />
                    <TextView
                        android:id="@+id/subs_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Updating..."/>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llbottomparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/spinner_container"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="?attr/title_backgroundColor"
                        android:visibility="visible">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginLeft="3dp"
                            android:textSize="16sp"
                            android:text="ðŸŒ¸ Episode Select"
                            android:layout_alignParentLeft="true"/>

                        <Spinner
                            android:id="@+id/season_spinner"
                            android:layout_width="wrap_content"
                            android:gravity="right"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_server_list"
                        android:paddingHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="true">

                    </androidx.recyclerview.widget.RecyclerView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/tv_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/tv_top_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/tv_thumb_iv"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center_vertical" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_title_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:text="Tv Title Name"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:id="@+id/watch_status_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ic_fiber_manual_record_red"
                                        android:drawablePadding="8dp"
                                        android:text="Watching Live on Oxxo" />

                                    <TextView
                                        android:id="@+id/watch_live_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="Watch Live Now"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:visibility="gone" />

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/share_iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="8dp"
                                    app:srcCompat="@drawable/ic_share_blue" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Now Watching" />

                            <LinearLayout
                                android:id="@+id/p_shedule_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/rounded_white"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/time_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/red_600"
                                    tools:text="11:30" />

                                <TextView
                                    android:id="@+id/program_type_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    tools:text="Regular Program" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/pro_guide_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/program_guide" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/program_guide_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                            </androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>


                    </RelativeLayout>

                    <include
                        android:id="@+id/ads_container"
                        layout="@layout/ads_container"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:paddingVertical="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:paddingLeft="3dp"
                            android:background="?attr/title_backgroundColor"
                            android:text="ðŸ“š Description"
                            android:layout_alignParentLeft="true"/>
                        <TextView
                            android:id="@+id/tv_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="Updating..."
                            android:textAppearance="@style/TextAppearance.smallNormal"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llbottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:paddingLeft="3dp"
                            android:textSize="16sp"
                            android:background="?attr/title_backgroundColor"
                            android:text="ðŸ“– Product Infomation"
                            android:layout_alignParentLeft="true"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:id="@+id/director"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/director"
                                android:textAppearance="@style/TextAppearance.Medium.Bold" />

                            <TextView
                                android:id="@+id/tv_director"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/director"
                                android:textAppearance="@style/TextAppearance.smallNormal" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:id="@+id/tv_release_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Medium.Bold" />

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingHorizontal="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/genre"
                                android:textAppearance="@style/TextAppearance.Medium.Bold" />

                            <TextView
                                android:id="@+id/tv_genre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:textAppearance="@style/TextAppearance.smallNormal" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingHorizontal="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cast_n_crew"
                                android:textAppearance="@style/TextAppearance.Medium.Bold" />

                            <TextView
                                android:id="@+id/tv_cast"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.smallNormal"
                                android:visibility="gone" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/cast_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="5dp"
                        android:background="@color/grey_transparent" />


                    <TextView
                        android:id="@+id/tv_related"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="?attr/title_backgroundColor"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:paddingLeft="3dp"
                        android:text="@string/you_may_also_like"
                        android:textAppearance="@style/TextAppearance.Small" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_related"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="?attr/title_backgroundColor"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="?attr/title_backgroundColor"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:paddingLeft="3dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/green_500"
                    android:text="âœ"
                    android:textAppearance="@style/TextAppearance.Small" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:text=" Comments"
                    android:textAppearance="@style/TextAppearance.Small" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                <RelativeLayout
                    android:id="@+id/llcomments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/commentHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/comments"
                        android:textAppearance="@style/TextAppearance.Medium.Bold" />

                    <EditText
                        android:id="@+id/et_comment"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_below="@id/commentHeading"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/comment_et_border"
                        android:hint="@string/your_comments"
                        android:padding="10dp" />

                    <Button
                        android:id="@+id/btn_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_comment"
                        android:layout_gravity="right"
                        android:text="@string/add_comments"
                        android:textAllCaps="false"
                        android:textColor="@color/gnt_white" />


                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/des_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_back_arrow" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/linear_share"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_toolbar_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/add_fav"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/report_iv"
                android:layout_marginHorizontal="8dp"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_report" />

            <ImageView
                android:id="@+id/share_iv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_share_white" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


</RelativeLayout>